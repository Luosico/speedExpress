<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luosico.mapper.AddressMapper">
    <delete id="deleteAddress">
        delete from address
        where
        <choose>
            <when test="addressId != null and addressId != ''">
                address_id = #{addressId}
            </when>
            <otherwise>
                1 = 2
            </otherwise>
        </choose>
    </delete>

    <select id="selectAllRegion" resultType="com.luosico.domain.Region">
        select region_id,
               region_name
        from region
    </select>

    <select id="selectAddressesByUserId" resultType="com.luosico.domain.Address">
        select address_id,
        user_id,
        region_id,
        pick_up_address,
        receive_address
        from address
        where
        <choose>
            <when test="userId != null and userId != ''">
                user_id = #{userId}
            </when>
            <otherwise>
                1 = 2
            </otherwise>
        </choose>
    </select>

    <insert id="addRegion" useGeneratedKeys="true" keyProperty="regionId">
        insert into region(region_name)
        values (#{regionName})
    </insert>

    <insert id="addAddress" useGeneratedKeys="true" keyProperty="addressId">
        insert into address(user_id,
                            region_id,
                            pick_up_address,
                            receive_address)
        values (#{userId},
                #{regionId},
                #{pickUpAddress},
                #{receiveAddress})
    </insert>
    <update id="updateAddress">
        update
        address
        <set>
            <if test="regionId !=null">
                region_id = #{regionId},
            </if>
            <if test="pickUpAddress!=null and pickUpAddress!=''">
                pick_up_address = #{pickUpAddress},
            </if>
            <if test="receiveAddress!=null and receiveAddress!=''">
                receive_address = #{receiveAddress},
            </if>
        </set>
        <where>
            <choose>
                <when test="addressId != null and addressId != ''">
                    address_id = #{addressId}
                </when>
                <otherwise>
                    1 = 2
                </otherwise>
            </choose>
        </where>
    </update>
</mapper>